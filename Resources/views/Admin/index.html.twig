{% extends 'NuxiaValuelistBundle:Admin:base.html.twig' %}

{% trans_default_domain 'NuxiaValuelist' %}

{% import 'NuxiaValuelistBundle:Macro:table.html.twig' as table_macro %}

{% set fields = fields|default(['code', 'label', 'value']) %}

{% block title_content %}
    {{ ('valuelist.' ~ category ~ '.index.title')|trans }}
{% endblock %}

{% block seo %}
    <title>{{ ('valuelist.' ~ category ~ '.index.title')|trans }}</title>
    <meta content="{{ 'valuelist.index.' ~ category ~ '.title'|trans }}" name="title">
{% endblock %}

{% block content %}
    {% if valuelist_action_valid('new', category) %}
        <div>
            <a href="{{ path('valuelist_new', {'category': category}) }}" title="{{ ('valuelist.' ~ category ~ '.new.link')|trans }}">
                {{ ('valuelist.' ~ category ~ '.new.link')|trans }}
            </a>
        </div>
    {% endif %}
    {% if list|length > 0 %}
        <table>
            <thead>
                <th>{{ ('valuelist.code.column'|trans }}</th>
                <th>{{ ('valuelist.label.column'|trans }}</th>
                <th>{{ ('valuelist.value.column'|trans }}</th>
                <th class="actions"></th>
            </thead>
            <tbody>
                {% for valuelist in list %}
                    <tr>
                        <td>{{ valuelist.code }}</td>
                        <td>{{ valuelist.label) }}</td>
                        <td>{{ valuelist.value }}</td>
                        <td class="actions">
                            <a href="{{ path('valuelist_edit', {'_object': valuelist}) }}" title="{{ 'edit'|trans }}">{{ 'edit'|trans }}</a>
                            <a href="{{ path('valuelist_delete', {'_object': valuelist}) }}" title="{{ 'edit'|trans }}">{{ 'delete'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div>{{ 'no_result'|trans }}</div>
    {% endif %}
{% endblock %}
